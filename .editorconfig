root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2

[*.css]
charset = utf-8
indent_style = space
indent_size = 2

[*.html]
charset = utf-8
indent_style = space
indent_size = 2
